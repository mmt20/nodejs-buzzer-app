<!DOCTYPE html>
<html>
  <head>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Arial", sans-serif;
        line-height: 1.6;
        color: #000;
        padding: 40px;
        background: #fff;
      }

      .letterhead {
        text-align: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #000;
      }

      .letterhead h1 {
        color: #000;
        font-size: 28px;
        margin-bottom: 5px;
      }

      .letterhead p {
        color: #444;
        font-size: 14px;
      }

      .invoice-details {
        margin-bottom: 30px;
      }

      .invoice-number {
        margin-bottom: 20px;
        font-size: 14px;
        color: #444;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 25px;
        font-size: 14px;
      }

      .customer-info {
        border: 1px solid #000;
        margin-bottom: 30px;
      }

      .customer-info th {
        width: 50%;
        padding: 15px;
        background-color: #f5f5f5;
        border: 1px solid #000;
      }

      .product-table {
        margin-top: 20px;
        border: 1px solid #000;
      }

      .product-table th {
        background-color: #e0e0e0;
        color: #000;
        padding: 12px;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 12px;
        letter-spacing: 0.5px;
        border: 1px solid #000;
      }

      .product-table td {
        padding: 12px;
        border: 1px solid #000;
        text-align: left;
      }

      .product-table tr:nth-child(even) {
        background-color: #f8f8f8;
      }

      .total-section {
        text-align: right;
        margin: 30px 0;
        padding: 20px;
        background-color: #f5f5f5;
        border: 1px solid #000;
      }

      .total-section h3 {
        color: #000;
        font-size: 18px;
        font-weight: bold;
      }

      .footer {
        margin-top: 50px;
        padding-top: 20px;
        border-top: 2px solid #000;
        text-align: center;
      }

      .footer h3 {
        color: #000;
        font-size: 16px;
        margin-bottom: 10px;
      }

      .footer p {
        color: #444;
        font-size: 14px;
        margin-bottom: 5px;
      }

      .timestamp {
        font-size: 12px;
        color: #666;
        text-align: right;
        margin-top: 20px;
      }

      h3 {
        color: #000;
        margin-bottom: 15px;
      }

      @media print {
        body {
          padding: 20px;
        }

        .product-table th {
          background-color: #e0e0e0 !important;
          -webkit-print-color-adjust: exact;
          print-color-adjust: exact;
        }

        .customer-info th,
        .total-section {
          background-color: #f5f5f5 !important;
          -webkit-print-color-adjust: exact;
          print-color-adjust: exact;
        }

        .product-table tr:nth-child(even) {
          background-color: #f8f8f8 !important;
          -webkit-print-color-adjust: exact;
          print-color-adjust: exact;
        }
      }
    </style>
  </head>
  <body>
    <div class="letterhead">
      <h1>BUZZER RESTAURANT</h1>
      <p>Premium Dining Experience</p>
      <p>123 Gourmet Street, Foodville</p>
      <p>Tel: (555) 123-4567 | Email: info@buzzerrestaurant.com</p>
    </div>

    <div class="invoice-number">
      <strong>Order Date:</strong> <%= new Date().toLocaleDateString() %>
    </div>

    <div class="invoice-details">
      <table class="customer-info">
        <tr>
          <th>
            <strong>Customer Name:</strong> <%= name %><br />
            <strong>Email:</strong> <%= email %>
          </th>
          <th>
            <strong>Contact Number:</strong> <%= contactNumber %><br />
            <strong>Payment Method:</strong> <%= paymentMethod %>
          </th>
        </tr>
      </table>
    </div>

    <h3>Order Details</h3>
    <table class="product-table">
      <thead>
        <tr>
          <th>Item Name</th>
          <th>Category</th>
          <th>Quantity</th>
          <th>Unit Price</th>
          <th>Sub Total</th>
        </tr>
      </thead>
      <tbody>
        <% if(Array.isArray(productDetails) && productDetails.length > 0) { %>
        <% productDetails.forEach(product => { %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.category %></td>
          <td><%= product.quantity %></td>
          <td>$<%= product.price.toFixed(2) %></td>
          <td>$<%= product.total.toFixed(2) %></td>
        </tr>
        <% }) %> <% } %>
      </tbody>
    </table>

    <div class="total-section">
      <h3>Total Amount: $<%= Number(totalAmount).toFixed(2) %></h3>
    </div>

    <div class="footer">
      <h3>Thank You for Choosing Buzzer Restaurant</h3>
      <p>We appreciate your business!</p>
      <p>Please visit us again</p>
      <p>For any queries, please contact our customer service</p>
    </div>

    <div class="timestamp">
      Generated on: <%= new Date().toLocaleString() %>
    </div>
  </body>
</html>
